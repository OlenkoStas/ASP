@model IEnumerable<Lesson_03.Models.Chat.GamesArchive>

@{
    ViewBag.Title = "Arhive";
}

<h2>Архив игр</h2>

@if (Model.Count() == 0)
{
    <div class="red">У вас нет сыграных ирг!</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerOne)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlayerTwo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Winner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Moves)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerOne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerTwo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Winner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moves)
            </td>
            <td>
                @Html.ActionLink("Подробно", "Details", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("На главную", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
</p>